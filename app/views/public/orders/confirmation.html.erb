<%= render 'public/homes/header', header: @header %>

<h3>注文情報確認</h3>
  <table>
    <thead>
     <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
    </thead>
    <tboby>
     <%= form_with model: @order, url: orders_path, method: :post do |f| %>
     　<% @cart_items.each do |cart_item| %>
         <tr>
          <td><%= cart_item.item.name %></td>
          <td><%= (cart_item.item.with_tax_price).to_s(:delimited) %></td>
          <td><%= cart_item.amount %></td>
          <td><%= (cart_item.item.with_tax_price*cart_item.amount).to_s(:delimited) %></td>
         </tr>
         <% @sum += cart_item.item.with_tax_price*cart_item.amount %>
     　<% end %>
    </tboby>
  　</table>
  　<table>
    <thead>
     <tr>
      <th>送料</th>
      <th>商品合計</th>
      <th>請求金額</th>
     </tr>
    </thead>
    <tboby>
     <tr>
      <td><%= @order.shipping_cost %></td>
      <td><%= @sum %></td>
      <td><%= @order.shipping_cost + @sum %></td>
     </tr>
    </tboby>
    </table>
     <h3>支払い方法
     　　<%= @order.payment_method_i18n %>
     </h3>
     <h3>お届け先
     　　<%= @order.full_address %>
     </h3>
     　<%= f.hidden_field :postal_code, :value => @order.postal_code %>
     　<%= f.hidden_field :address, :value => @order.address %>
     　<%= f.hidden_field :name, :value => @order.name %>
     　<%= f.hidden_field :payment_method, :value => @order.payment_method %>
     　<%= f.hidden_field :total_payment, :value => @order.shipping_cost + @sum %>
     　<%= f.hidden_field :shipping_cost, :value => @order.shipping_cost %>
　　　<%= f.submit '注文を確定する' %>
 　　　<% end %>