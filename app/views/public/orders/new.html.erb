<%= render 'public/homes/header', header: @header %>

<h3>注文情報入力</h3>

<%= form_with model: @order, url: confirmation_path, method: :post do |f| %>
  
  <div class="field">
    <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
    <%= f.label :payment_method, "クレジットカード" %>
  
    <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
    <%= f.label :payment_method, "銀行振込" %>
    
  <div class= "field">
    <%= f.radio_button :customer_address, "1" %>
    <%= f.label :customer_address, "ご自身の住所" %>
    <%= current_customer.address %>
  </div>
  <div class= "field">
    <%= f.radio_button :customer_addres, "2" %>
    <%= f.label :customer_addres, "登録住所から選択" %>
    <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %>
  </div>
  <div class= "field">
    <%= f.radio_button :customer_addres, "3" %>
    <%= f.label :customer_addres, "新しいお届け先" %>
  </div>
  <div class="field">
    <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
    <%= f.text_field :postal_code %>
  </div>
  
  <div class="field">
    <%= f.label :address, "住所" %>
    <%= f.text_field :address %>
  </div>
  
  <div class="field">
    <%= f.label :name, "宛名" %>
    <%= f.text_field :name %>
  </div>
  <%= f.submit '登録画面' %>
<% end %>
  </div>  
