<%= render 'public/homes/header', header: @header %>

<h2>会員情報編集</h2>

<%= form_with model: @customer, url: customers_path, method: :patch do |f| %>
<div class="field">
   <h4>名前</h4>
    <%= f.label :last_name, "(姓)" %>
    <%= f.text_field :last_name %>
    
    
    <%= f.label :first_name, "(名)" %>
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
   <h4>フリガナ</h4>
    <%= f.label :last_name_kana, "(セイ)" %>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
    
    <%= f.label :first_name_kana, "(メイ)" %>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
  </div>

  <div class="field">
    <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "lpostal_code" %>
  </div>
  
  <div class="field">
    <%= f.label :address, "住所" %>
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>
  
  <div class="field">
    <%= f.label :telephone_number, "電話番号(ハイフンなし)" %>
    <%= f.telephone_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
  </div>
  
  <div class="field">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "編集内容を保存" %>
  </div>
  
  <div>
    <%= link_to "退会する", withdrawal_confirmation_path %>
  </div>
  <% end %>
  