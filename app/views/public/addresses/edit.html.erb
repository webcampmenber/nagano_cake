<%= render 'public/homes/header', header: @header %>

<h3>配送先登録/一覧</h3>
<%= form_with model: @address, url: address_path(@address.id), method: :patch do |f| %> 

  <div class="field">
    <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "lpostal_code" %>
  </div>
  
  <div class="field">
    <%= f.label :address, "住所" %>
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>
  
  <div class="field">
    <%= f.label :name, "宛名" %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>
  <%= f.submit '変更内容を更新' %>
<% end %>