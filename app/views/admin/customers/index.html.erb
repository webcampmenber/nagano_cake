<%= render 'admin/homes/header', homes: @homes %>

<h1>会員一覧</h1>
<div class="container"> 
 <div class="row">
  <div class="col-lg-8">
   <table class="table table-striped">
     <thead>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
     </thead>
     <tboby>
      <% @customer.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td><%= link_to admin_customer_path(customer.id) do %><%= customer.last_name %><%= customer.first_name %><% end %></td>
        <td><%= customer.email %></td>
        <td>
         <% if customer.is_deleted %>
         退会
         <% else %>
         有効
         <% end %>
         </td>
       </tr>
      <% end %>
     </tboby>
   </table>
     <%= paginate @customer %>