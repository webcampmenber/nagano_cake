<h1>会員一覧</h1>

<table>
    <thead>
     <th>会員ID</th>
     <th>氏名</th>
     <th>メールアドレス</th>
     <th>ステータス</th>
    </thead>
    <tboby>
     <% @customer.each do |customer| %>
     <tr>
      <td><%= customer.id %></td>
      <td><%= link_to admin_customer_path(customer.id) do %><% customer.last_name %><% customer.fist_name %><% end %></td>
      <td><%= customer.email %></td>
      <td>
       <% if customer.is_deleted %>
       有効
       <% else %>
       無効
       <% end %>
       </td>
      </tr>
     <% end %>
    </tboby>
  </table>