<%= render 'admin/homes/header', homes: @homes %>

<div class="container"> 
 <div class="row">
  <div class="col-lg-4">
   <h1>商品詳細</h1>
    <%= image_tag @item.image, size: "200x200" %>
  </div>  
  <div class="col-lg-4">
    <h3>商品名</h3>
    <%= @item.name %>
    
    <h3>商品説明</h3>
    <%= @item.introduction %>
    
    <h3>ジャンル</h3>
    <%= @item.genre.name %>
    
    <h3>販売ステータス</h3>
    <% if @item.is_active %>
     販売中
     <% else %>
     販売停止中
     <% end %>
     <%= link_to '編集する', edit_admin_item_path(@item.id) %>
   </div>
 </div>
</div>
